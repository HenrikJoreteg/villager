        for person in people
          li(class= person.approved)
            a(href= '/people/' + person.slug)
              img.grav(src= person.avatar)
              h3= person.fullName
              if moderator
                p
                  if !person.approved
                    | Pending
                  if person.approved
                    | âˆš
                  if person.moderator
                    | M
                  if person.admin
                    | A
        if me
          li(class="pending")
            a(href="/people/" + me.slug)
              img.grav(src= me.avatar)
              h3= me.fullName
              p
                if !me.approved
                  | Pending

        if moderator
          li
            a.andOne(href="/people/add") +
        if !userid
