extends ../layout

block body
  body
    include ../in/header

    form(method="POST", action="/lists/add")
      fieldset
        legend Add new list
        .form-element
          label(for="name") Name
          input.form-input(name="name")
        .form-element
          label(for="description") Description
          input.form-input(name="description")
        - var sections = ['groups', 'places']
          each section in sections
            label.form-element.input-radio(for="radio") 
              input(name="type", type="radio", value=section)
              | #{section}
        button.button.button-primary(type="submit") Add list

    include ../in/footer