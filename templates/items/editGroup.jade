extends ../layout

block body
  body
    include ../in/header

    form(method="POST", action="/groups/update/" + group.key)
      fieldset
        legend Edit #{group.name}
        .form-element
          label(for="type") Type of group:
          select(name="type")
            if group.type
              option(value=group.type) #{group.type.name}
            else
              option(value="") -- Select a Category --
            each cat in groupCategories[0]
              if group.type.key !== cat.key
                option(value=cat.key) #{cat.name}
        .form-element
          label(for="name") Group name
          input.form-input(name="name", type="text", placeholder="Name of the group", value= group.name)
        .form-element
          label(for="website") Website
          input.form-input(name="website", type="text", placeholder="http://placewebsite.com", value= group.website)
        .form-element
          label(for="twitter") Twitter handle
          input.form-input(name="twitter", type="text", placeholder="Twitter username", value= group.twitter)
        .form-element
          label(for="image") Link to image
          input.form-input(name="image", type="text", placeholder="link to an image", value= group.images)
        .form-element
          label(for="about") Description
          textarea.form-input(name="about", type="text", maxlength="160", placeholder="Describe this group (160 characters max)") #{group.about}
        button.button.button-primary(name="submit", type="submit") Update

    include ../in/footer